<%- include ('../partials/header.ejs')%>

<div class="container-fluid mt-5 container-full-height container-full-width">
    <h2>Create a New Connection</h2>
    <div class="form-section second-page-content">
        <form action="/connections" method = 'POST'>
            <div class="form-group">
                <label for="title">Name</label>
                <input type="text" name="title" id="title" placeholder="Enter the title of event" required>
            </div>
            <div class="form-group">
                <label for="topic">Topic</label>
                <input type="text" name="topic" id="topic" placeholder="Enter the topic of event" required>
            </div>
            
            <div class="form-group">
                <label for="details">Details</label>
                <input type="text" id="details" name="details" placeholder="Enter the details of the event" required minlength="10" >
            </div>
            <div class="form-group">
                <label for="location">Where</label>
                <input type="text" id="location" name="location" placeholder="Enter the location of event" required>
            </div>
            <div class="form-group">
                <label for="date">When</label>
                <input type="date" id="date"  name="date" required>
            </div>
            <div class="form-group">
                <label for="time_start">Start</label>
                <input type="time" id="time_start" name="startTime" required>
            </div>
            <div class="form-group">
                <label for="time_end">End</label>
                <input type="time" id="time_end" name="endTime" required >
            </div>
            <div class="form-group">
                <label for="upload">Image</label>
                <input type="text" id="upload" name="image" required >
            </div>
        <br>
            <button type="submit" class="btn btn-primary">Create Connection</a>
        </form>
    </div>
</div>
